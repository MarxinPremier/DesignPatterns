<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/abs_factory_example_uml"
            style="@style/umlImgStyle"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/abs_factory_createA1"
            style="@style/buttonStyle"
            android:layout_below="@+id/abs_factory_example_uml"
            android:text="创建A1" />

        <Button
            android:id="@+id/abs_factory_createA2"
            style="@style/buttonStyle"
            android:layout_below="@+id/abs_factory_createA1"
            android:text="创建A2" />

        <Button
            android:id="@+id/abs_factory_createB1"
            style="@style/buttonStyle"
            android:layout_below="@+id/abs_factory_createA2"
            android:text="创建B1" />

        <Button
            android:id="@+id/abs_factory_createB2"
            style="@style/buttonStyle"
            android:layout_below="@+id/abs_factory_createB1"
            android:text="创建B2" />

    </RelativeLayout>
</ScrollView>
