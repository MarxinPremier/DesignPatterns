<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/builder_example_uml_img"
            style="@style/umlImgStyle"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/builder_example_benza_btn"
            style="@style/buttonStyle"
            android:layout_below="@+id/builder_example_uml_img"
            android:text="奔驰a" />

        <Button
            android:id="@+id/builder_example_benb_btn"
            style="@style/buttonStyle"
            android:layout_below="@+id/builder_example_benza_btn"
            android:text="奔驰b" />

        <Button
            android:id="@+id/builder_example_bmwa_btn"
            style="@style/buttonStyle"
            android:layout_below="@+id/builder_example_benb_btn"
            android:text="宝马a" />

        <Button
            android:id="@+id/builder_example_bmwb_btn"
            style="@style/buttonStyle"
            android:layout_below="@+id/builder_example_bmwa_btn"
            android:text="宝马b" />

    </RelativeLayout>
</ScrollView>